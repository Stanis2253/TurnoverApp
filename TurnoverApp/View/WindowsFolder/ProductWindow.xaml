<Window x:Class="TurnoverApp.View.WindowsFolder.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurnoverApp.View.WindowsFolder"
        xmlns:cc="clr-namespace:CustomElementControl;assembly=CustomElementControl"
        mc:Ignorable="d"
        Title="Изменение продукта" Height="450" Width="400"
        ResizeMode="NoResize"
        >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <cc:DataInput Title="Введите название"/>
        
        <cc:DataInput Title="Введите описание" Grid.Row="1"/>

        <cc:ComboboxInput Title="Укажите категорию" Grid.Row="2"/>
        
        <cc:ComboboxInput Title="Укажите производителя" Grid.Row="3"/>

        <cc:ComboboxInput Title="Укажите единицу измерения" Grid.Row="4"/>

        <Button Grid.Row="5" Margin="50,30,50,0" Content="Готово"/>

    </Grid>
</Window>
