<Page x:Class="TurnoverApp.View.PagesFolder.BasicPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurnoverApp.View.PagesFolder.BasicPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <Style TargetType="Button" x:Key="HeaderButton">
            <Setter Property="Width" Value="200"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource HeaderButton}" Content="Показатели"/>
            <Button Style="{StaticResource HeaderButton}" Content="Документы"/>

        </StackPanel>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

    </Grid>

</Page>
